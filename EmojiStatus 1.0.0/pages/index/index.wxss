/**index.wxss**/
.page {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #DA615C;
}

.content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.text-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
}

.sliders-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.slider-item {
  margin-bottom: 30rpx;
}

.slider-item:last-child {
  margin-bottom: 0;
}

.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.dimension-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.dimension-value {
  font-size: 28rpx;
  color: #DA615C;
  font-weight: bold;
}

.dimension-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.emoji-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.emoji-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.picker {
  color: #DA615C;
  font-weight: bold;
}

.emoji-display {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
  margin: 20rpx 0;
  min-height: 120rpx;
}

.emoji {
  font-size: 80rpx;
}

.randomize-btn {
  background: #DA615C;
  color: #fff;
  border: none;
  margin-top: 20rpx;
}

.randomize-btn:active {
  opacity: 0.8;
}

.generate-btn {
  background: #DA615C;
  color: #fff;
  border: none;
  margin-top: 30rpx;
  margin-bottom: env(safe-area-inset-bottom);
}

.generate-btn:active {
  opacity: 0.8;
}

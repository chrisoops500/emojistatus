.mood-slider {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.slider-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.slider-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #999;
} 